<div class="wrapper">
    <h3>메뉴로 검색하기</h3>
    <form action="/search" method="GET" >
        <div class="wrapper">
            <div
                class="btn-group"
                role="group"
                aria-label="Basic radio toggle button group"
            >
                <% for(let i=0;i<food.length;i++){ %>
                <input
                    type="radio"
                    class="btn-check"
                    name="searchTxt"
                    id="<%=i%>"
                    autocomplete="off"
                    value="<%=food[i]%>"
                    checked
                />
                <label class="btn btn-outline-primary foodItem" for="<%=i%>"><%=food[i]%></label>
                <%}%>
            </div>
            <button class="btn btn-outline-primary btn-sm" type="submit"> 찾아보기</button>
        </div>
    </form>
</div>